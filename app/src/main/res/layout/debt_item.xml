<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:id="@+id/itemCardView">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/debt_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Until Sunday." />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="1500 RUB."
            android:textSize="@dimen/debt_item_amount_text_size"
            android:textColor="@color/debt_item_amount_text"/>

        <TextView
            android:id="@+id/subjectNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Dr. Watson" />

    </LinearLayout>

</androidx.cardview.widget.CardView>